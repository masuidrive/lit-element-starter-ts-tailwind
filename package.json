{
  "name": "my-elements",
  "private": true,
  "version": "1.0.0",
  "description": "A simple web component",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nf --procfile Procfile.dev start",
    "build": "rollup --config",
    "build:watch": "rollup --config --watch",
    "clean": "rimraf dist/*.{d.ts,d.ts.map,js,js.map} test/*.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "node live-server.js",
    "checksize": "rollup --config ; cat dist/index.js | gzip -9 | wc -c ; rm dist/index.js",
    "storybook": "npm run analyze && build-storybook",
    "storybook:watch": "start-storybook -p 6006 --quiet",
    "chromatic": "npx chromatic --project-token=3ea3da69121d"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "masuidrive",
  "license": "BSD-3-Clause",
  "dependencies": {
    "element-internals-polyfill": "^1.0.3",
    "lit": "^2.0.0",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/web-components": "^6.4.19",
    "@types/web": "^0.0.54",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.5.1",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "foreman": "^3.0.1",
    "lit-analyzer": "^1.1.10",
    "lit-html": "^2.2.0",
    "live-server": "^1.2.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-lit-tailwindcss3": "^2.1.6",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2"
  },
  "customElements": "custom-elements.json"
}
